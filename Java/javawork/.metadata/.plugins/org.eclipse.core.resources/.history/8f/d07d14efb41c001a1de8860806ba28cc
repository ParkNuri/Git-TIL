package workbook.section5;

public class MobileTest {

	public static void main(String[] args) {
		Ltab m1 = new Ltab("Ltab", 500, "AP-01");
		Otab m2 = new Otab("Otab", 1000, "AND-20");
	
		System.out.println("Mobile\tBattery\tOS\t");
		System.out.println("-------------------------------");
		System.out.println(m1.getMobileName()+"\t"+m1.getBatterySize()+"\t"+m1.getOsType()+"\n"+m2.getMobileName()+"\t"+m2.getBatterySize()+"\t"+m2.getOsType()+"\n");
		
		//10분 충전
		System.out.println("10분 충전");
		m1.charge(10);
		m2.charge(10);
		
		System.out.println(m1.getMobileName()+"\t"+m1.getBatterySize()+"\t"+m1.getOsType()+"\n"+m2.getMobileName()+"\t"+m2.getBatterySize()+"\t"+m2.getOsType());
		
		//5분 통화
		System.out.println("10분 충전");
		m1.operate(5);
		m2.operate(5);
				
		
		System.out.println(m1.getMobileName()+"\t"+m1.getBatterySize()+"\t"+m1.getOsType()+"\n"+m2.getMobileName()+"\t"+m2.getBatterySize()+"\t"+m2.getOsType());
		
		
		}

}
